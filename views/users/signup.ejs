<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h1 class="col-8 offset-3">SignUp on Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label"><b>Username</b></label>
                    <input name="username" id="username" placeholder="Enter Username" type="text"
                        class="form-control " required>
                    <div class="invalid-feedback">Please enter a valid Username</div>
                    <div class="valid-feedback">Username looks good</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label"><b>Email</b></label>
                    <input name="email" id="email" placeholder="Enter Email" type="email" class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid Email</div>
                    <div class="valid-feedback">Email looks good</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label"><b>Password</b></label>
                    <input name="password" id="password" placeholder="Enter Password" type="password"
                        class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid Password</div>
                    <div class="valid-feedback">Password looks good</div>
                </div>

                <button type="submit" class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>